<?xml version="1.0" ?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget class="Risecommerce\AllProductReviews\Block\Widget\ProductReviews" id="risecommerce_all_product_reviews">
        <label>All Product Reviews</label>
        <description>Risecommerce All Product Reviews</description>
        <parameters>
            <parameter name="template" xsi:type="select" required="true" visible="true">
                <label>Template</label>
                <options>
                    <option name="datatemplate" value="widget/reviews.phtml" selected="true">
                        <label translate="true">Product Reviews Template</label>
                    </option>
                </options>
            </parameter>
        </parameters>
        <containers>
            <container name="content">
                <template name="datatemplate" value="datatemplate" />
            </container>
        </containers>
    </widget>
</widgets>
